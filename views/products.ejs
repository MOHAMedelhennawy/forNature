<%- include('partials/header'); -%>
<script src="/javascript/products.js"></script>

<div class="product-container">

    <!-- Filterations sidebar start -->
    <div class="sidebar">
        
    </div>
    <!-- Filterations sidebar end -->

    <div class="product-content">
        <div class="carousel-section">

        </div>
        <div class="product-collection">
            <div class="product-grid">
                <div class="product-item" id="">
                    <img class="product-image" src="" alt="">

                    <div class="product-information">
                        <div class="product-name">
                            <h3></h3>
                        </div>
                        <div class="product-rating">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star-half"></span>
                        </div>
                        <p class="product-summery"></p>
                        <div class="buttons">
                            <div class="price"></div>
                            <button class="cart-btn">Add to cart</button>
                            <div class="product-quantity">
                                <button class="decrease-quantity"><i class='bx bx-minus'></i></button>
                                <span class="quantity">1</span>
                                <button class="increase-quantity"><i class='bx bx-plus'></i></button>
                            </div>
                            <button class="favorate-btn"><i class="material-icons">favorite</i></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>
