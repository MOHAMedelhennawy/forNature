<%- include('partials/header'); -%>
<script type="module" src="/javascript/admin.js"></script>

<div class="orders-container">
    <div class="orders-collection">
        <div class="admin-header">
            <div class="left-header">
                <h1 class="title">Orders List</h1>
            </div>
            <div class="right-header">
                <div class="filter-orders">
                    filter
                </div>
                <div class="add-product btn">
                    <i class='bx bx-plus bx-tada' ></i>
                    <span>Product</span>
                </div>
            </div>
        </div>
        <hr>
        <table class="orders-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Total Cost</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="order-id">Test ID</td>
                    <td class="order-cost">$100</td>
                    <td class="order-status">
                        <select class="order-status-dropdown" onchange="updateStatus(this)">
                            <option value="Pending" class="status-pending">Pending</option>
                            <option value="Completed" class="status-completed">Completed</option>
                            <option value="Cancelled" class="status-cancelled">Cancelled</option>
                        </select>
                    </td>
                    <td>
                        <button class="btn-view-details">View Details</button>
                        <button class="btn-delete">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div id="popup-overlay"></div>
    <div id="popup">
        <div class="popup-header">
            <div class="header-title">
                General Information
            </div>
            <div class="popup-footer">
                <div id="closePopup"><i class='bx bx-x'></i></div>
            </div>
        </div>
        <hr>
        <!-- <div class="popup-body">This is the popup content.</div> -->
        <div class="popup-body">
        </div>
    </div>
</div>
