<%- include('partials/header'); -%>
<script src="/javascript/login.js"></script>

<form id="login-form" method="POST" action="/login">
    <div class="form-container">
        <div class="login form-content">
            <div class="title">
                <h2>Login</h2>
            </div>
            <div class="login input">
                <!-- <i class="fas fa-envelope"></i> -->
                <input type="text" name="email" placeholder="Email" required>
                <div class="email error"></div>
            </div>
            <div class="login input">
                <!-- <i class="fas fa-lock"></i> -->
                <input type="password" name="password" placeholder="Password" required>
                <div class="password error"></div>
            </div>
            <div class="login-btn-holder button input">
                <button class="login-btn" type="submit">Log in</button>
            </div>
            <div class="text">Don't have an account &nbsp;<a class="redirect" href="/signup">Sign up</a></div>
            <!-- OAuth2 start -->
            <div class="OAuth2">
                <div class="button">
                    <a class="google-auth" href="/auth/google"><img class="Oauth2-logo" style="width: 55px;" src="/images/logos/icons8-facebook-logo-100.png" alt=""></i></a>
                </div>
                <div class="button">
                    <a class="google-auth" href="/auth/google"><img class="Oauth2-logo" src="/images/logos/icons8-github-logo-24.png" alt=""></i></a>
                </div>
                <div class="button">
                    <a class="google-auth" href="/auth/google"><img class="Oauth2-logo" src="/images/logos/icons8-google-logo-40.png" alt="facebook-new"/></a>
                </div>
            </div>
            <!-- OAuth2 end -->
        </div>
        
        <div class="image">
            <img src="images/products/ryan-riggins.jpg" alt="">
        </div>
    </div>
</form>
<%- include('partials/footer'); -%>