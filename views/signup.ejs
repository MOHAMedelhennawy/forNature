<%- include('partials/head'); -%>
<script src="/javascript/signup.js"></script>

<form id="signup-form" method="POST" action="/signup">
    <div class="form-container">
        <div class="form-content">
            <div class="title">
                <h2>Create A New Account</h2>
            </div>
            <div class="name">
                <div class="first_name input">
                    <!-- <i class="fas fa-user"></i>  -->
                    <input type="text" name="first_name" placeholder="First name" required>
                    <div class="first_name error"></div>
                </div>
                <div class="input">
                    <!-- <i class="fas fa-user"></i>  -->
                    <input type="text" name="last_name" placeholder="Last name" required>
                    <div class="last_name error"></div>
                </div>
            </div>
            <div class="input">
                <!-- <i class="fas fa-lock"></i> -->
                <input type="text" name="username" placeholder="Username" required>
                <div class="username error"></div>
            </div>
            <div class="input">
                <!-- <i class="fas fa-envelope"></i> -->
                <input type="text" name="email" placeholder="Email" required>
                <div class="email error"></div>
            </div>
            <div class="input">
                <!-- <i class="fas fa-lock"></i> -->
                <input type="password" name="password" placeholder="Password" required>
                <div class="password error"></div>
            </div>
            <div class="input">
                <!-- <i class="fas fa-lock"></i> -->
                <input type="text" name="phone_number" placeholder="Phone Number" required>
                <div class="phone_number error"></div>
            </div>
            <div class="button input">
                <button type="submit">Sign Up</button>
            </div>
            <div class="text">Already have an account? &nbsp;<a class="redarect" href="/login"> Log in</a></div>

            <div class="OAuth2">
                <div class="google-auth">google</div>
                <div class="facebook-auth">facebook</div>
                <div class="google-auth">google</div>
            </div>
        </div>
        <div class="image">
            <img src="images/ryan-riggins.jpg" alt="">
        </div>
    </div>
</form>
<%- include('partials/footer'); -%>